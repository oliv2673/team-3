---
import Layout from "../layouts/Layout.astro";
import CTA from "../components/CTA.astro";
import Slider from "../components/Product_page_slider.astro";
import SelectSize from "../components/Select_size.astro";
import InstaScroll from "../components/Insta_scroll.astro";



---

<Layout>
  <Slider
    img1="/assets/img/productphotos/ondaring1.webp"
    img2="/assets/img/productphotos/ondaring2.webp"
    img3="/assets/img/productphotos/ondaring3.webp"
  />
  <section class="product">
    <div class="productDesc">
      <h2>Onda ring</h2>
      <p>1500 DKK</p>
      <div class="seeMore">
      <p class="p_small">See more about this product</p>
      <img class="arrow" src="/assets/arrow.svg" alt="arrow button for more information">
    </div>
    </div>
    <div class="size">
      <p class="p_small_black">Select size</p>
      <div class="size_numbers">
      <SelectSize state="primary" number="47"/>
      <SelectSize state="primary" number="49"/>
      <SelectSize state="primary" number="51"/>
      <SelectSize state="primary" number="53"/>
      <SelectSize state="primary" number="55"/>
      <SelectSize state="primary" number="57"/>
      <SelectSize state="primary" number="59"/>
      <SelectSize state="primary" number="61"/>
    </div>
    </div>
    <div class="cta_con">
      <CTA text="Add to cart" state="primary" />
    </div>
  </section>
  <section class="info_con">
    <p class="align_c">Onda ring 925 sterling silver.</p>
    <p class="align_c">Made in Denmark.</p>
  </section>
  <section class="info_text_con">
    <div class="button_h3_con">
      <h2 id="care">Care</h2>
    <h2 id="material">Material</h2>
    <h2 id="size">Size</h2>
    
  </div>
  <div id="material_text_con" class="align_c">
    <p> Each Cióió piece is individually handcrafted in Eva’s studio. Cióió is a living brand, avoiding mass production. It evolves piece by piece, making each one unique. I offer the flexibility to recreate and customize every piece according to your preferences.</p>
    <p>Necklace with rock crystals, 925 sterling silver lock &
      brown silk bead cord.</p>
    </div>
  <div id="size_text_con" class="align_c">
    <p>Ensure a perfect fit for your ring by accurately measuring your finger circumference.</p>
     <CTA text="Find your size" state="primary"/>
  </div>
 <div id="care_text_con" class="align_c">
    <p>To prevent your sterling silver from tarnishing, keep it away from harsh chemicals, keep it dry, store it correctly, and clean and use special silver cloth to polish when needed.</p>
    <p> Take it off when washing your hands or swimming, and keep it in a secure bag or box when you're not wearing it. You also want to take it off when exercising.</p>
    </div>
  </section>
  <InstaScroll
  title="OTHERS HAVE BOUGHT"
  img1="/assets/img/othershavebought/foto1.webp"
  alt1=""
  img2="/assets/img/othershavebought/foto2.webp"
  alt2=""
  img3="/assets/img/othershavebought/foto3.webp"
  alt3=""
  img4="/assets/img/othershavebought/foto4.webp"
  alt4=""
  img5="/assets/img/othershavebought/foto5.webp"
  alt5=""
  img6="/assets/img/othershavebought/foto6.webp"
  alt6=""
  img7="/assets/img/followusoninsta/foto4.webp"
  alt7=""
  img8="/assets/img/followusoninsta/foto3.webp"
  alt8=""
/>
</Layout>


<style>
  .p_small, .p_small_black {
    font-size:var(--w_desc);
  }
  .p_small_black {
    color: var(--black-500);
    text-wrap: nowrap;
    padding: 10px;
  }

  section {
    margin-inline: auto;
  }

.product {
  margin: 20px;
}
  .product {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    
  }

.size {
  display: flex;
  margin-bottom: auto;
}

.size_numbers {
  display: flex;
}

.info_con, .info_text_con {
    max-width: 700px;
    display: flex;
    flex-direction: column;
    gap: var(--gap);
    justify-content: center;
    align-items: center;
    margin-block: var(--m_margin);
    }

    .align_c {
      display: flex;
      flex-direction: column;
      text-align: center;
      gap: var(--gap);
    }

    .button_h3_con {
      display: flex;
      flex-direction: row;
      gap: 10vw;
    }

    .seeMore {
      display: flex;
    }

    .arrow {
      color: var(--black-500);
      transition: opacity 1s ease-out;
      width: 20px;
      cursor: pointer;
    }

    #material:hover, #size:hover, #care:hover {
      text-decoration: underline;
      cursor: pointer;

    }
    #material,  #size, #care {
      transition: 300ms ease;

    }

    .underline {
    text-decoration: underline;
  }

    .hide {
      display: none;
      
    }

    @media (max-width: 800px) {

      .product {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }
      .p_small_black {
        padding: 8px 8px 8px 0;
      }
/*
      .size {
  display: flex;
  flex-direction: column;
  gap: 10px;
}
*/

.p_small {
  font-size: var(--m_product_text);
}
    
  }


</style>

<script>
  //clicked function on info card

  window.addEventListener("load", sidenVises);

  function sidenVises() {
    console.log("Siden vises");

    // Initially hide the size and care containers
    document.querySelector("#size_text_con").classList.add("hide");
    document.querySelector("#care_text_con").classList.add("hide");

    // Initially underline the material link
    document.querySelector("#care").classList.add("underline");

    // Clicked function for material
    document.querySelector("#material").addEventListener("click", clickMaterial);

    // Clicked function for size
    document.querySelector("#size").addEventListener("click", clickSize);

    // Clicked function for care
    document.querySelector("#care").addEventListener("click", clickCare);
  }

  function clickMaterial() {
    console.log("Material info clicked");

    document.querySelector("#material_text_con").classList.remove("hide");
    document.querySelector("#size_text_con").classList.add("hide");
    document.querySelector("#care_text_con").classList.add("hide");

    // Update underline class
    updateUnderline("#material");
  }

  function clickSize() {
    console.log("Size info clicked");

    document.querySelector("#material_text_con").classList.add("hide");
    document.querySelector("#size_text_con").classList.remove("hide");
    document.querySelector("#care_text_con").classList.add("hide");

    // Update underline class
    updateUnderline("#size");
  }

  function clickCare() {
    console.log("Care info clicked");

    document.querySelector("#material_text_con").classList.add("hide");
    document.querySelector("#size_text_con").classList.add("hide");
    document.querySelector("#care_text_con").classList.remove("hide");

    // Update underline class
    updateUnderline("#care");
  }

  function updateUnderline(activeId) {
    // Remove underline from all
    document.querySelector("#material").classList.remove("underline");
    document.querySelector("#size").classList.remove("underline");
    document.querySelector("#care").classList.remove("underline");

    // Add underline to the active element
    document.querySelector(activeId).classList.add("underline");
  }
</script>