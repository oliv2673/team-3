---
import Layout from "../layouts/Layout.astro";
import CTA from "../components/CTA.astro";
import ProductCard from "../components/Product_card.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Shop">
  <Hero
    img="/assets/img/shop/headerfoto.webp"
    title="Shop"
    jumplink="#productshowcase"
  />
  <section class="productshowcase">
    <div class="con">
      <a href="/product">
        <ProductCard
          name="ACRO NECKLACE & AMOR CHARM"
