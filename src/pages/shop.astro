    </div>
    <div class="con">
      <a href="/product">
        <ProductCard
          name="Acro Neckring"
          price="2900"
          img="/assets/img/shop/forside8.webp"
          hover="/assets/img/hoverphotosshop/acroneckring.webp"
        />
      </a>
    </div>
    <div class="con">
      <a href="/product">
        <ProductCard
          name="Charm"
          price="1100"
          img="/assets/img/shop/forside9.webp"
          hover="/assets/img/hoverphotosshop/ohlocharm.webp"
        />
      </a>
    </div>
    <div class="con">
      <a href="/product">
        <ProductCard
          name="Mar charm"
          price="1100"
          img="/assets/img/shop/forside10.webp"
          hover="/assets/img/hoverphotosshop/marcharm.webp"
        />
      </a>
    </div>
    <div class="con">
      <a href="/product">
        <ProductCard
          name="Onda ring"
