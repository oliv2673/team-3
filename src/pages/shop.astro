  </section>

  <section class="imgx2">
    <img src="/assets/img/shop/foto1.webp" class="desk_img" alt="" />

    <img src="/assets/img/shop/foto2.webp" class="desk_img" alt="" />
    <img src="/assets/img/shop/botbanner.webp" class="mobile_img" alt="" />
  </section>
</Layout>

<style>
  .productshowcase {
    display: grid;
    grid-template-columns: repeat(3, 0.5fr); /* Three columns for desktop */
    gap: var(--gap);
    margin-inline: auto;
    padding-block: var(--margin);
  }

  .con {
    padding-inline: 10px;
    justify-self: center;
  }

  .bigimg {
    display: flex;
    padding: 0;
    justify-content: center;
  }

  .imgx2 {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-around;
    width: 100%;
    padding: 0;
    margin-bottom: var(--margin);
  }

  img {
    height: auto;
    max-width: 100%;
    object-fit: cover;
  }

  .imgx2 img {
    height: 360px;
    width: 360px;
  }

  .mobile_img {
    display: none;
  }

  a {
    cursor: pointer;
  }

  @media (max-width: 715px) {
    #productshowcase {
      grid-template-columns: repeat(2, 1fr); /* Two columns for mobile */
    }

    .mobile_img {
      display: block;
    }

    .desk_img {
      display: none;
    }

    .imgx2 img {
      height: auto;
      width: 100%;
    }

    .imgx2 {
      padding-bottom: 0;
      margin-bottom: 0;
    }
  }

  @media (max-width: 480px) {
    section {
      grid-template-columns: 1fr; /* One column for very small screens */
    }
  }
</style>
