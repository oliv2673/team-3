---
const { name, price, link, img, alt, hover } = Astro.props;
---

<div class="con">
  <div class="image">
    <img
      src={img}
      alt={alt}
      class="img_base"
      style="height: 100%; width: 100%"
    />
    <img
      src={hover}
      alt={alt}
      class="img_hover"
      style="height: 100%; width: 100%;"
    />
  </div>
  <a href="/product">
    <p class="name underline">{name}</p>
    <br />
    <p class="price underline">{price} DKK</p>
  </a>
</div>
<style>
  .con {
    display: flex;
    flex-direction: column;
    gap: 20px;
    object-fit: cover;
    text-align: center;
    width: 340px;
    margin-bottom: var(--margin);
  }

  .image {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 340px;
    height: 340px;
    overflow: hidden;
    position: relative;
    object-fit: cover;
    text-align: center;
  }

  img {
    max-width: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    transition: 300ms ease;
  }

  .img_hover {
    opacity: 0;
  }

  .image:hover .img_hover {
    opacity: 1;
  }

  .image:hover .img_base {
    opacity: 0;
  }

  .name {
    font-weight: var(--regular);
    font-size: var(--w_desc);
    text-transform: uppercase;
  }

  .price {
    font-weight: var(--bold);
    font-size: var(--w_price);
    color: var(--black-500);
    text-transform: uppercase;
  }

  a {
    cursor: pointer;
  }

  @media (max-width: 715px) {
    .image {
      height: 180px;
      width: 180px;
    }

    .con {
      width: 180px;
    }

    .price {
      font-size: var(--m_price);
    }

    .name {
      font-size: var(--m_desc);
    }
  }
</style>
