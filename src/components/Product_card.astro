---
const { name, price, link, img, alt, hover } = Astro.props;
---

<a href={link}>
  <div class="con">
    <div class="image">
      <img src={img} alt={alt} class="img_base" />
      <img
        src={hover}
        alt={alt}
        class="img_hover"
        style="height: 100%; width: auto;"
      />
    </div>
    <p class="name underline">{name}</p>
    <p class="price underline">{price}</p>
  </div>
</a>
<style>
  .con {
    display: flex;
    flex-direction: column;
    gap: 20px;
    text-align: center;
  }

  .image {
    width: 100%;
    min-width: 280px;
    max-width: 340px;
    min-height: 280px;
    max-height: 340px;
    overflow: hidden;
    position: relative;
  }

  img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .img_hover {
    opacity: 0;
  }

  .image:hover .img_hover {
    opacity: 1;
  }

  .image:hover .img_base {
    opacity: 0;
  }

  .name {
    font-weight: var(--regular);
    font-size: var(--w_desc);
    text-transform: uppercase;
  }

  .price {
    font-weight: var(--bold);
    font-size: var(--w_price);
    color: var(--black-500);
    text-transform: uppercase;
  }

  a {
    cursor: pointer;
  }
</style>
