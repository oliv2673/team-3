---
const { headline, text, state } = Astro.props;
---

<section>
  <h2 class={state}>{headline}</h2>
  <p>{text}</p>
</section>

<style>
  section {
    max-width: 700px;
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    gap: var(--gap);
    margin-block: var(--margin);
    justify-content: center;
    align-items: center;
  }

  p {
    text-align: center;
    z-index: 100;
  }

  h2 {
    z-index: 100;
  }

  .hide {
    display: none;
  }

  @media (max-width: 700px) {
    section {
      padding-inline: 10%;
      margin-block: var(--m_margin);
    }
  }
</style>
