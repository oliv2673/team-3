---
const {hero_img, hero_alt, h1_text, jumplink } = Astro.props;
---

<section class="hero-section">
  <img src={hero_img} alt={hero_alt}>
  <div class="hero_con">
    <div class="grid_con">
    <h1>{h1_text}</h1>
    <a href={jumplink} class="arrow">
    <img src="/assets/arrow.svg" class="arrow" alt="arrow pointing down" /></a>
    </div>
  </div>
</section>

<style>
img {
  width: 100vw;
  display: block;
}
  .hero-section {
    position: relative;
    height: 100vh;
    width: 100%;
    overflow: hidden;
  }

  .hero_con {
    padding: 40px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%)


  }

  .grid_con {
    display: flex;
    flex-direction: column;
    margin: auto;
    align-items: center;
  }
  .arrow {
    transition: opacity 1s ease-out;
    mix-blend-mode: difference;
    width: 50px;
    cursor: pointer;
  }
</style>